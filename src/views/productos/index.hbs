<div class="col-md-12 mt-4 pr-5">   
    <div class="d-flex align-items-center">
        <div>
            <h3 class="pl-5">PRODUCTOS</h3>
        </div>
        <div class="d-flex ml-auto align-items-center">
            <a class="btn btn-block btn-primary mr-2" href="/productos/crear"><i class="fas fa-tasks text-white"></i> Crear</a>
            <select name="rol" id="rol-buscar" class="form-control mr-sm-2">
                <option>Todos</option>
                {{#each categorias}}
                <option value={{id}}>{{nombre}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="p-4" id="contenedor">
        <div class="row justify-content-betwen" id="App">
            <table class="table text-center" id="filas">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody  id="insertar-filas">
                    {{#each productos}}
                    <tr>
                        <th>{{id}}</th>
                        <th>{{nombre}}</th>
                        <th>{{precio}}</th>
                        <th>{{descripcion}}</th>
                        <th>{{stock}}</th>
                        <th>{{categorium.nombre}}</th>
                        <th>
                            <button class="btn btn-success editar" data-id="{{id}}">Editar</button>
                            <button class="btn btn-danger eliminar" data-id="{{id}}">Eliminar</button>
                        </th>
                    </tr>
                    {{else}}
                        <p>No hay categorias</p>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="module" src="js/productos-view.js"></script>