<div class="container p-4" id="contenedor">
    <div class="row" id="App">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Editar Usuario</h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="/usuarios/editar/{{user.id}}">
                        <div class="form-group">
                            <input type="text" name="nombre" value="{{user.nombre}}" placeholder="Nombre" class="form-control">
                            <span class="text-danger">{{e.nombre}}</span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellido" value="{{user.apellido}}" placeholder="Apellido" class="form-control">
                            <span class="text-danger">{{e.apellido}}</span>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" value="{{user.email}}" placeholder="Email" class="form-control">
                            <span class="text-danger">{{e.email}}</span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Editar</button>
                            <a href="/usuarios" class="btn btn-sm btn-light">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>